<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.aqib.icrave.ResultActivity$PlaceholderFragment">

    <TextView
        android:text="@string/rate_the_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:stepSize="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rating_no_image"
        android:id="@+id/textView3"
        android:singleLine="false"
        android:layout_below="@+id/rating"
        android:layout_toLeftOf="@+id/linearLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rating_perfect_image"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/linearLayout" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/craving_decision"
            android:layout_below="@+id/rating"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:id="@+id/textView2"
            android:gravity="center_horizontal"
            android:textStyle="bold" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_save"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:background="@drawable/button_save_for_later"
            android:longClickable="false" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_healthy_snack"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/button_save"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_healthy" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_unhealthy_snack"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/button_healthy_snack"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_non_healthy" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_another_image"
            android:id="@+id/button_another_image"
            android:layout_below="@+id/button_unhealthy_snack"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

    </LinearLayout>

</RelativeLayout>
